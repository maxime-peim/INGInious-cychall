import sys
import re
import argparse
import inginious_container_api.feedback
import cychall_container_api.utils

parser = argparse.ArgumentParser(formatter_class=argparse.RawTextHelpFormatter, description='Generate a flag and place it in a file.\n')
parser.add_argument('--student-flag', help='Flag submitted by the student', default=None)
parser.add_argument('--student-flag-path', help='Path to the file in which the susdent stored his flag.', default=None)
parser.add_argument('--correct-flag', help='Flag to be checked.', default=None)
parser.add_argument('--correct-flag-path', help='Path to the file in which the flag is stored.', default=None)
parser.add_argument('-i', '--id', help='Problem id.', default='')
args = parser.parse_args()

student_flag = args.student_flag
student_flag_path = args.student_flag_path
correct_flag = args.correct_flag
correct_flag_path = args.correct_flag_path
problem = args.id


correct_flag = cychall_container_api.utils.extract_value(
                    correct_flag,
                    correct_flag_path)

student_flag = cychall_container_api.utils.extract_value(
                    student_flag,
                    student_flag_path)

# remove any trailing or heading whitespaces
student_flag = re.sub(r'\s+', '', student_flag)


result = 'success' if student_flag == correct_flag else 'failed'

if not problem:
    inginious_container_api.feedback.set_global_result(result)
else:
    inginious_container_api.feedback.set_problem_result(result, problem)